<%=form_with(model: @inventory, local:true, url: { action: 'create' }, html: { method: 'post' }) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :unit_price %>
    <%= f.number_field :sale_price, class:"form-control", step: "0.01", value: "2.00", placeholder: "2.00" %>
  </div>
  <div class="form-group">
    <%= f.label :stock %>
    <%= f.number_field :amount, class:"form-control", step: "1", value: "1", placeholder: "1" %>
  </div>
  <%= f.submit "Save to my Inventory", class:"btn btn-primary mt-1" %>
<% end %>